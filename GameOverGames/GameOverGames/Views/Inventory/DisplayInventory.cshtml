@model IEnumerable<GameOverGames.Models.InventoryVM>

@{
    ViewBag.Title = "DisplayInventory";
}

<h2>Inventory</h2>

<ul class="nav navbar-nav navbar-right">
    <li><h4> @Session["UserName"]</h4></li>
</ul>
@{
    var user = Session["UserName"] as UserControl;

<p>
    @Html.ActionLink("Create New", "AddInventory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th>
            @Html.DisplayName("Current Stock")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.inventoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inventoryPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.inventoryStock)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateInventory", new { id = item.inventoryID }) |
            @Html.ActionLink("Details", "Details", new { id = item.inventoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.inventoryID })
        </td>
    </tr>

}
    <div>
        <h3>@Html.ActionLink("Back to Admin Page", "DisplayAdmin", "User", new { area = "areaName", id = Session["ID"] }, null)</h3>
    </div>
</table>
    }
@if (User.Identity != null)
{
    @Html.ActionLink("Logout", "Logout");
}
